{
  "expo": {
    "name": "Lyrica Player",
    "slug": "lyrica-player",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/lyrica-logo.png",
    "scheme": "lyrica-player",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["audio", "fetch"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/splash.png",
        "backgroundColor": "#000",
        "resizeMode": "contain"
      },
      "notificationIcon": "./assets/images/lyrica-logo.png",
      "notificationChannel": "playback",
      "permissions": ["WAKE_LOCK"],
      "package": "com.kingrashy.lyricaplayer"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-dev-launcher",
        {
          "launchMode": "most-recent"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "56c1f744-117b-4ee1-b294-c70433813279"
      }
    }
  }
}
